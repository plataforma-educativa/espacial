<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<TitledPane fx:id="panel" animated="false" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="espacial.interfaz.ControladorDeInformeNave"
            styleClass="informe">
    <text>
        Nave
    </text>
    <content>
        <GridPane id="GridPane" hgap="2">
            <children>
                <Label text="Nombre" styleClass="nombre"
                       GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="CENTER"/>
                <TextField fx:id="nombre" styleClass="valor" editable="false" maxWidth="80"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                </TextField>
                <Button styleClass="explicacion"
                        GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.valignment="CENTER"
                        onAction="#mostrarExplicacion"/>
                <Label text="Escudos" styleClass="nombre"
                       GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                <ProgressBar fx:id="nivelEscudos" maxWidth="120"
                             GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER"
                             GridPane.columnSpan="2"/>
                <Label text="Arsenal" styleClass="nombre"
                       GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
                <Separator GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER"
                           GridPane.columnSpan="2"/>
                <Label text="Carga" styleClass="nombre"
                       GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="CENTER"/>
                <Separator GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER"
                           GridPane.columnSpan="2"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </content>
</TitledPane>
